<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>release-dev</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}</directory>
			<includes>
				<include>README*</include>
				<include>LICENSE*</include>
				<include>NOTICE*</include>
				<include>pom.xml</include>
			</includes>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/java/</directory>
			<useDefaultExcludes>true</useDefaultExcludes>
			<outputDirectory>/src</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/resources/</directory>
			<useDefaultExcludes>true</useDefaultExcludes>
			<outputDirectory>/src/resources</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/libs/</directory>
			<useDefaultExcludes>true</useDefaultExcludes>
			<outputDirectory>/src/libs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/test/java/</directory>
			<useDefaultExcludes>true</useDefaultExcludes>
			<outputDirectory>/test/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/test/resources/</directory>
			<useDefaultExcludes>true</useDefaultExcludes>
			<outputDirectory>/test/resources</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/test/libs/</directory>
			<useDefaultExcludes>true</useDefaultExcludes>
			<outputDirectory>/test/libs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/libs/</directory>
			<useDefaultExcludes>true</useDefaultExcludes>
			<outputDirectory>/libs</outputDirectory>
		</fileSet>
		<fileSet>
		    <directory>${project.basedir}/target/site/</directory>
		    <useDefaultExcludes>true</useDefaultExcludes>
		    <outputDirectory>/site</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/target</directory>
			<useDefaultExcludes>true</useDefaultExcludes>
			<outputDirectory>/</outputDirectory>
			<excludes><exclude>*/*</exclude></excludes>
			<includes><include>*.jar</include></includes>
		</fileSet>
	</fileSets>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/deps</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<unpack>false</unpack>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
</assembly>